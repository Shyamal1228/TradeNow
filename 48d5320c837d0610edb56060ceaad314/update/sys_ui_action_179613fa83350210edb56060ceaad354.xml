        <script><![CDATA[function confirmPickUp() {
    var answer = confirm("Are you sure you want to confirm the pick up?");

    if (answer == true) {
        gsftSubmit(null, g_form.getFormElement(), 'confirm_pick_up');
    } else {
        return false;
    }
}

if (typeof window == 'undefined') {
    populatePoints();
}

function populatePoints() {
	var userGr = new GlideRecord('sys_user');
    userGr.addQuery('sys_id', current.getValue('claimer'));
    userGr.query();
    if (userGr.next()) {
        userGr.u_points += 50;
        userGr.update();
    }
    current.setValue('status', 'claimed');
	current.update();
	action.setRedirectURL(current);
	gs.addInfoMessage("Order picked up and points added");
}]]></script>
