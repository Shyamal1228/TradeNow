<!-- CSS -->
<style>
  .scroll-up-arrow {
    position: fixed;
    bottom: 10px;
    right: 10px;
    display: none; /* Initially hidden */
    z-index: 1000;
    cursor: pointer;
  }
</style>

<!-- JavaScript -->
<script>
  function scrollToTop() {
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }

  window.addEventListener('scroll', function() {
    if (window.scrollY > 200) {
      document.querySelector('.scroll-up-arrow').style.display = 'block';
    } else {
      document.querySelector('.scroll-up-arrow').style.display = 'none';
    }
  });

  window.addEventListener('resize', function() {
    if (window.innerWidth >= 1024) {
      document.querySelector('.scroll-up-arrow').style.display = 'block';
    } else {
      document.querySelector('.scroll-up-arrow').style.display = 'none';
    }
  });
</script>
